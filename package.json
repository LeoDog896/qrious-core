{
  "name": "qrious-core",
  "version": "4.0.0",
  "description": "QRious core engine for QR code generation",
  "homepage": "https://github.com/neocotic/qrious-core",
  "bugs": {
    "url": "https://github.com/neocotic/qrious-core/issues"
  },
  "author": {
    "name": "Alasdair Mercer",
    "email": "mercer.alasdair@gmail.com",
    "url": "https://neocotic.com"
  },
  "license": "GPL-3.0",
  "keywords": [
    "qr",
    "code",
    "qrious",
    "core",
    "engine"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "test:watch": "tsdx test --watch",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/qrious-core.esm.js",
  "size-limit": [
    {
      "path": "dist/qrious-core.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/qrious-core.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/split": "^1.0.0",
    "husky": "^7.0.4",
    "size-limit": "^7.0.8",
    "split": "^1.0.1",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  }
}
