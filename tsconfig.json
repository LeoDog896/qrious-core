{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist/",
    "lib": ["es2021"]
  },
  "include": ["src/**/*.ts", "index.ts"]
}
